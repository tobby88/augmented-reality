<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout"
    android:orientation="horizontal">

    <eu.tobby.momentanpol.OpenCVTask.MomentanpolOpenCVView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/OpenCVCamView"
        opencv:show_fps="true"
        opencv:camera_id="any" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/minThresh"
        android:layout_gravity="center_vertical"
        android:indeterminate="false"
        android:max="1000"
        android:layout_above="@+id/maxThreshText"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/maxThresh"
        android:layout_gravity="bottom"
        android:indeterminate="false"
        android:max="1000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="0"
        android:id="@+id/minThreshText"
        android:layout_gravity="left|bottom"
        android:textColor="#ffffffff"
        android:layout_above="@+id/minThresh"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:text="0"
        android:id="@+id/maxThreshText"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="#ffffffff"
        android:layout_above="@+id/maxThresh"
        android:layout_alignEnd="@+id/minThresh" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hough"
        android:layout_above="@+id/minThreshText"
        android:layout_alignParentStart="true"
        android:max="1000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:id="@+id/houghText"
        android:textColor="#ffffffff"
        android:text="0"
        android:layout_above="@+id/hough"
        android:layout_alignParentStart="true" />

</RelativeLayout>